{
  "name": "cw.helper.dev.runner",
  "version": "1.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "dev": "node --loader ts-node/esm src/cli.ts",
    "format": "prettier \"src/**/*.ts\" \"tests/**/*.ts\" --write",
    "format:check": "prettier \"src/**/*.ts\" \"tests/**/*.ts\" --check",
    "prepare": "npm run build && npm run hooks:install",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "hooks:install": "node scripts/setup-hooks.cjs",
    "prepublishOnly": "npm run build && node scripts/smoke.mjs",
    "release": "node scripts/release.mjs"
  },
  "keywords": [
    "dev-runner",
    "watcher",
    "reload",
    "typescript",
    "cw"
  ],
  "author": "Mert Kurak",
  "license": "MIT",
  "description": "Lightweight development runner for cw projects.",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.1",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "cw-dev-runner": "dist/cli.js"
  },
  "dependencies": {
    "cw.helper.colored.console": "^1.2.2"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkurak/cw.helper.dev.runner.git"
  },
  "bugs": {
    "url": "https://github.com/mkurak/cw.helper.dev.runner/issues"
  },
  "homepage": "https://github.com/mkurak/cw.helper.dev.runner"
}
